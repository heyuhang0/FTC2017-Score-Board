      <view class="btnReduce" bindtap="clickButtonB10"><view class="btnReduce-container">-</view></view>
    </view>
    <view class="count-button-group">
      <view class="subtitle-text">信标</view>
      <view class="btnAdd" bindtap="clickButtonB11"><view class="btnAdd-container">+</view></view>
      <view class="btnReduce" bindtap="clickButtonB12"><view class="btnReduce-container">-</view></view>
    </view>
    <view class="slider-container">
      <view class="slider-text">{{blueSliderData3}}</view>
      <slider max="3" step="1" bindchange="listenerSliderblue3" />
    </view>
  </view>
  
