      <view class="btnReduce" bindtap="clickButton8"><view class="btnReduce-container">-</view></view>
    </view>
    <view class="count-button-group">
      <view class="subtitle-text">角区漩涡</view>
      <view class="btnAdd" bindtap="clickButton9"><view class="btnAdd-container">+</view></view>
      <view class="btnReduce" bindtap="clickButton10"><view class="btnReduce-container">-</view></view>
    </view>
    <view class="count-button-group">
      <view class="subtitle-text">信标</view>
      <view class="btnAdd" bindtap="clickButton11"><view class="btnAdd-container">+</view></view>
      <view class="btnReduce" bindtap="clickButton12"><view class="btnReduce-container">-</view></view>
    </view>
    <view class="slider-container">
      <view class="slider-text">{{redSliderData3}}</view>
      <slider max="3" step="1" bindchange="listenerSliderRed3" />
    </view>
  </view>
  
  <view class="driver-red-screen">
    <view class="score-text-1">{{redData4}}</view>
    <view class="score-text-2">{{redData5}}</view>
    <view class="score-text-3">{{redData6}}</view>
  </view>


